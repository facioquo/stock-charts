{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // Schema: https://code.visualstudio.com/docs/reference/tasks-appendix
  "$schema": "vscode://schemas/tasks",
  "version": "2.0.0",
  "presentation": {
    "echo": true,
    "clear": true,
    "panel": "dedicated",
    "showReuseMessage": false
  },
  "problemMatcher": [],
  "tasks": [
    {
      "label": "Initialize: Pull, rebuild, and verify",
      "detail": "Pull latest, clean, rebuild, format, lint, and run tests",
      "dependsOn": [
        "Git: pull",
        "Clean: all outputs",
        "Build: all projects (full rebuild)",
        "Lint: All (fix)",
        "Test: all tests"
      ],
      "dependsOrder": "sequence",
      "group": "build"
    },
    {
      "label": "Git: pull",
      "detail": "Pull latest changes from Git",
      "type": "shell",
      "command": "git pull || echo 'No remote branch'"
    },
    {
      "label": "Install: All dependencies",
      "detail": "Restore NuGet and Node.js packages across workspaces",
      "dependsOn": ["Install: NuGet packages", "Install: pnpm dependencies"],
      "dependsOrder": "parallel"
    },
    {
      "label": "Install: pnpm dependencies",
      "detail": "Restore Node.js packages across workspaces",
      "type": "shell",
      "command": "pnpm install"
    },
    {
      "label": "Install: NuGet packages",
      "detail": "Restore .NET packages for solution",
      "type": "shell",
      "command": "dotnet restore Charts.sln",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Clean: all outputs",
      "detail": "Clean build outputs from all projects",
      "dependsOn": ["Clean: frontend outputs", "Clean: backend outputs"],
      "dependsOrder": "parallel",
      "group": "build"
    },
    {
      "label": "Clean: frontend outputs",
      "detail": "Clean Angular build outputs (dist, coverage)",
      "type": "shell",
      "command": "pnpm --filter @stock-charts/client run clean"
    },
    {
      "label": "Clean: backend outputs",
      "detail": "Clean .NET build outputs (bin, obj)",
      "type": "shell",
      "command": "dotnet clean Charts.sln -v minimal --nologo",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Build: all projects (incremental)",
      "detail": "Incremental build of frontend and backend",
      "dependsOn": [
        "Build: frontend (incremental)",
        "Build: backend (incremental)"
      ],
      "dependsOrder": "parallel",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc", "$msCompile"]
    },
    {
      "label": "Build: all projects (full rebuild)",
      "detail": "Full rebuild without incremental compilation",
      "dependsOn": [
        "Clean: all outputs",
        "Build: frontend (incremental)",
        "Build: backend (incremental)"
      ],
      "dependsOrder": "sequence",
      "group": "build",
      "problemMatcher": ["$tsc", "$msCompile"]
    },
    {
      "label": "Build: frontend (incremental)",
      "detail": "Build Angular application",
      "type": "shell",
      "command": "pnpm --filter @stock-charts/client run build",
      "group": "build",
      "problemMatcher": "$tsc"
    },
    {
      "label": "Build: backend (incremental)",
      "detail": "Build .NET solution",
      "type": "shell",
      "command": "dotnet build Charts.sln -v minimal --nologo",
      "group": "build",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Build: backend (production)",
      "detail": "Build .NET solution in Release configuration",
      "type": "shell",
      "command": "dotnet build Charts.sln -c Release -v minimal --nologo",
      "group": "build",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Lint: All (check)",
      "detail": "Run all linting checks without fixes",
      "dependsOn": [
        "Lint: frontend code (check)",
        "Lint: backend code (check)",
        "Lint: markdown files (check)"
      ],
      "dependsOrder": "parallel",
      "group": "test",
      "problemMatcher": "$markdownlint"
    },
    {
      "label": "Lint: All (fix)",
      "detail": "Auto-fix all linting issues",
      "dependsOn": ["Lint: All code (fix)", "Lint: markdown files (fix)"],
      "dependsOrder": "sequence",
      "group": "none",
      "problemMatcher": "$markdownlint"
    },
    {
      "label": "Lint: All code (fix)",
      "detail": "Format frontend and backend code",
      "dependsOn": ["Lint: frontend code (fix)", "Lint: backend code (fix)"],
      "dependsOrder": "parallel",
      "group": "none",
      "problemMatcher": ["$tsc", "$markdownlint"]
    },
    {
      "label": "Lint: frontend code (check)",
      "detail": "Check Angular code with ESLint",
      "type": "shell",
      "command": "pnpm --filter @stock-charts/client run lint",
      "group": "test",
      "problemMatcher": "$eslint-stylish"
    },
    {
      "label": "Lint: frontend code (fix)",
      "detail": "Format Angular code with Prettier",
      "type": "shell",
      "command": "pnpm run format:web",
      "group": "none",
      "problemMatcher": "$tsc"
    },
    {
      "label": "Lint: backend code (check)",
      "detail": "Run Roslynator analysis and .NET format check",
      "type": "shell",
      "command": "dotnet format --verify-no-changes && roslynator analyze",
      "dependsOn": ["Build: backend (incremental)"],
      "dependsOrder": "sequence",
      "group": "test",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Lint: backend code (fix)",
      "detail": "Format .NET code with dotnet format and Roslynator",
      "type": "shell",
      "command": "roslynator fix && dotnet format",
      "group": "none",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Lint: markdown files (check)",
      "detail": "Lint markdown files",
      "type": "shell",
      "command": "pnpm run lint:md",
      "group": "test",
      "problemMatcher": "$markdownlint"
    },
    {
      "label": "Lint: markdown files (fix)",
      "detail": "Auto-fix markdown formatting issues",
      "type": "shell",
      "command": "pnpm run lint:md:fix",
      "group": "none",
      "problemMatcher": "$markdownlint"
    },
    {
      "label": "Test: all tests",
      "detail": "Run frontend and backend unit tests",
      "dependsOn": ["Test: frontend", "Test: backend"],
      "dependsOrder": "parallel",
      "group": "test",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Test: frontend",
      "detail": "Run Angular unit tests",
      "type": "shell",
      "command": "pnpm --filter @stock-charts/client run test",
      "group": "test",
      "problemMatcher": "$tsc",
      "presentation": { "clear": true }
    },
    {
      "label": "Test: backend",
      "detail": "Run .NET unit tests",
      "type": "shell",
      "command": "pnpm run test:dotnet",
      "group": "test",
      "problemMatcher": "$msCompile",
      "presentation": { "clear": true }
    },
    {
      "label": "Start: full development stack",
      "detail": "Start all backend services and frontend dev server",
      "dependsOn": [
        "Start: Azure Storage Emulator",
        "Start: Azure Functions",
        "Start: Web API",
        "Start: frontend dev server"
      ],
      "dependsOrder": "sequence",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Start: Azure Storage Emulator",
      "detail": "Start Azurite (Azure Storage Emulator)",
      "type": "shell",
      "command": "pnpm run azure:start",
      "isBackground": true,
      "group": "none",
      "problemMatcher": {
        "pattern": {
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^Azurite .* service is starting",
          "endsPattern": "^Azurite .* service successfully listens"
        }
      },
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated"
      }
    },
    {
      "label": "Start: Azure Functions",
      "detail": "Start Azure Functions host",
      "type": "shell",
      "command": "func start",
      "dependsOn": "Build: backend (incremental)",
      "dependsOrder": "sequence",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/server/Functions"
      },
      "group": "none",
      "problemMatcher": {
        "pattern": {
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Worker process started",
          "endsPattern": "^.*Host started"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Start: Web API",
      "detail": "Start ASP.NET Core Web API server",
      "type": "shell",
      "command": "dotnet run",
      "options": {
        "cwd": "${workspaceFolder}/server/WebApi"
      },
      "isBackground": true,
      "group": "none",
      "problemMatcher": {
        "pattern": {
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Building",
          "endsPattern": "^.*Application started"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Start: frontend dev server",
      "detail": "Start Angular development server (with HMR)",
      "type": "shell",
      "command": "pnpm --filter @stock-charts/client run start",
      "isBackground": true,
      "group": "none",
      "problemMatcher": {
        "pattern": {
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Compiling",
          "endsPattern": "^.*Application bundle generation complete"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },

    // =========================================================================
    // CLEANUP
    // =========================================================================
    {
      "label": "Clean: temporary caches",
      "detail": "Delete build caches and lock files",
      "type": "shell",
      "command": "pnpm run clean && dotnet clean Charts.sln -v minimal --nologo",
      "group": "build",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Clean: Azure Storage Emulator data",
      "detail": "Delete local Azurite data and state",
      "type": "shell",
      "command": "pnpm run azure:clean",
      "group": "none"
    }
  ]
}
