{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build: Functions",
      "detail": "Build Azure Functions project",
      "type": "process",
      "command": "dotnet",
      "args": [
        "build",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "dependsOn": "Clean: Functions",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$msCompile"],
      "options": {
        "cwd": "${workspaceFolder}/server/Functions"
      },
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem"
      }
    },
    {
      "label": "Build: Website",
      "detail": "Build Angular frontend application",
      "type": "npm",
      "script": "build",
      "path": "client/",
      "group": "build",
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem"
      }
    },
    {
      "label": "Build: Server",
      "detail": "Build .NET backend solution",
      "type": "process",
      "command": "dotnet",
      "args": [
        "build",
        "Charts.sln",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "group": "build",
      "problemMatcher": ["$msCompile"],
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem"
      }
    },
    {
      "label": "Build: All",
      "detail": "Build all projects in parallel",
      "dependsOn": ["Build: Website", "Build: Server"],
      "dependsOrder": "parallel",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Test: Website",
      "detail": "Run Angular frontend tests",
      "type": "npm",
      "script": "test",
      "path": "client/",
      "group": "test",
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Test: Backend",
      "detail": "Run .NET backend tests with coverage",
      "type": "npm",
      "script": "test:dotnet",
      "group": "test",
      "problemMatcher": ["$msCompile"],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Test: All",
      "detail": "Run all project tests (frontend and backend)",
      "dependsOn": ["Test: Website", "Test: Backend"],
      "dependsOrder": "sequence",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Lint: Website",
      "detail": "Lint Angular frontend code",
      "type": "npm",
      "script": "lint",
      "group": "build",
      "problemMatcher": ["$eslint-stylish"],
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem"
      }
    },
    {
      "label": "Lint: Website (fix)",
      "detail": "Lint and auto-fix Angular frontend code",
      "type": "npm",
      "script": "lint:fix",
      "group": "build",
      "problemMatcher": ["$eslint-stylish"],
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem"
      }
    },
    {
      "label": "Lint: Markdown",
      "detail": "Lint Markdown files",
      "type": "npm",
      "script": "lint:md",
      "group": "build",
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem"
      }
    },
    {
      "label": "Lint: Markdown (fix)",
      "detail": "Lint and auto-fix Markdown files",
      "type": "npm",
      "script": "lint:md:fix",
      "group": "build",
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem"
      }
    },
    {
      "label": "Lint: All",
      "detail": "Run all linting tasks in sequence",
      "type": "npm",
      "script": "lint",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Format: Website",
      "detail": "Format frontend code with Prettier",
      "type": "npm",
      "script": "format:web",
      "group": "build",
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem"
      }
    },
    {
      "label": "Format: Website (check)",
      "detail": "Check frontend code formatting",
      "type": "npm",
      "script": "format:web:check",
      "group": "build",
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem"
      }
    },
    {
      "label": "Format: VS Code",
      "detail": "Format VS Code configuration files",
      "type": "npm",
      "script": "format:vscode",
      "group": "build",
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem"
      }
    },
    {
      "label": "Format: All",
      "detail": "Format all project code (frontend + backend)",
      "type": "npm",
      "script": "format",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Format: .NET",
      "detail": "Format .NET backend code",
      "type": "npm",
      "script": "format:dotnet",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Start: Website",
      "detail": "Start Angular development server",
      "type": "npm",
      "script": "start",
      "group": "build",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "development"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Start: Functions",
      "detail": "Start Azure Functions host",
      "type": "shell",
      "command": "func",
      "args": ["start"],
      "dependsOn": "Build: Functions",
      "options": {
        "cwd": "${workspaceFolder}/server/Functions"
      },
      "group": "build",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "development"
      },
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "Start: WebAPI",
      "detail": "Start .NET Web API server",
      "type": "shell",
      "command": "dotnet",
      "args": ["run"],
      "options": {
        "cwd": "${workspaceFolder}/server/WebApi"
      },
      "group": "build",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "development"
      },
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "Start: Azurite",
      "detail": "Start Azure Storage Emulator",
      "type": "npm",
      "script": "azure:start",
      "group": "build",
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "panel": "dedicated",
        "group": "development"
      }
    },
    {
      "label": "Start: Full Stack",
      "detail": "Start complete development environment",
      "dependsOn": [
        "Start: Azurite",
        "Start: Functions",
        "Start: WebAPI",
        "Start: Website"
      ],
      "dependsOrder": "parallel",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Clean: Functions",
      "detail": "Clean Azure Functions build artifacts",
      "type": "process",
      "command": "dotnet",
      "args": [
        "clean",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": ["$msCompile"],
      "options": {
        "cwd": "${workspaceFolder}/server/Functions"
      },
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem"
      }
    },
    {
      "label": "Clean: Functions (Release)",
      "detail": "Clean Azure Functions release build artifacts",
      "type": "process",
      "command": "dotnet",
      "args": [
        "clean",
        "--configuration",
        "Release",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": ["$msCompile"],
      "options": {
        "cwd": "${workspaceFolder}/server/Functions"
      },
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem"
      }
    },
    {
      "label": "Publish: Functions",
      "detail": "Publish Azure Functions for deployment",
      "type": "process",
      "command": "dotnet",
      "args": [
        "publish",
        "--configuration",
        "Release",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "dependsOn": "Clean: Functions (Release)",
      "problemMatcher": ["$msCompile"],
      "options": {
        "cwd": "${workspaceFolder}/server/Functions"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Clean: Azurite",
      "detail": "Delete local Azurite data (.azurite folder)",
      "type": "npm",
      "script": "azure:clean",
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated"
      }
    }
  ]
}
