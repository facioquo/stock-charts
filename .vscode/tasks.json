{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-client",
      "type": "npm",
      "script": "build",
      "path": "client/",
      "group": "build",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "build-server",
      "type": "shell",
      "command": "dotnet",
      "args": ["build"],
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "group": "build",
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "start-client",
      "type": "npm",
      "script": "start",
      "path": "client/",
      "group": "build",
      "isBackground": true
    },
    {
      "label": "start-server",
      "type": "shell",
      "command": "func",
      "args": ["start"],
      "options": {
        "cwd": "${workspaceFolder}/server/Functions"
      },
      "group": "build",
      "isBackground": true
    },
    {
      "label": "test-client",
      "type": "npm",
      "script": "test",
      "path": "client/",
      "group": "test",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "lint-client",
      "type": "npm",
      "script": "lint",
      "path": "client/",
      "group": "build",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "lint-client-fix",
      "type": "npm",
      "script": "lint:fix",
      "path": "client/",
      "group": "build",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "lint-markdown",
      "type": "npm",
      "script": "lint:md",
      "path": "client/",
      "group": "build",
      "problemMatcher": [{
        "owner": "markdownlint",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^([^:]+):(\\d+)(?::(\\d+))?\\s+(MD\\d+\\/[^\\s]+)\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "code": 4,
          "message": 5
        },
        "severity": "warning"
      }]
    },
    {
      "label": "start-webapi-server",
      "type": "shell",
      "command": "dotnet",
      "args": ["run"],
      "options": {
        "cwd": "${workspaceFolder}/server/WebApi"
      },
      "group": "build",
      "isBackground": true
    },
    {
      "label": "build-all",
      "dependsOn": ["build-client", "build-server"],
      "dependsOrder": "parallel",
      "group": "build"
    },
    {
      "label": "test-all",
      "dependsOn": ["test-client"],
      "group": "test"
    },
    {
      "label": "lint-all",
      "dependsOn": ["lint-client", "lint-markdown"],
      "dependsOrder": "sequence",
      "group": "build"
    },
    {
      "label": "start-full-stack",
      "dependsOn": ["start-client", "start-webapi-server"],
      "dependsOrder": "parallel",
      "group": "build"
    }
  ]
}
