# top-most EditorConfig file
root = true

# see Client and Server folders for
# language unique editor configurations

# global baselines
[*]
charset = utf-8
end_of_line = lf

indent_style = space
indent_size = 2
tab_width = 2

line_length = 150
max_line_length = 150
trim_trailing_whitespace = true
insert_final_newline = true

[*.{xml,yml}]
indent_style = space
indent_size = 2
