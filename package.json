{
  "name": "stock-charts",
  "version": "1.0.0",
  "description": "Full-stack financial charting application with Angular frontend and .NET backend",
  "private": true,
  "workspaces": [
    "client"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/facioquo/stock-charts.git"
  },
  "author": "facioquo",
  "license": "Apache-2.0",
  "scripts": {
    "clean": "npm run clean --workspaces",
    "build": "npm run build --workspaces",
    "build:prod": "npm run build.prod --workspaces",
    "start": "npm run start --workspace=@stock-charts/client",
    "test": "npm run test --workspaces",
    "test:watch": "npm run test:watch --workspaces",
    "test:coverage": "npm run test:coverage --workspaces",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "lint:md": "markdownlint \"**/*.md\" \".github/**/*.md\" --ignore \"**/node_modules/**\" --ignore \".azurite/**\"",
    "lint:md:fix": "markdownlint \"**/*.md\" \".github/**/*.md\" --ignore \"**/node_modules/**\" --ignore \".azurite/**\" --fix",
    "format": "npm run format:web && npm run format:dotnet",
    "format:check": "npm run format:web:check && npm run format:dotnet:check",
    "format:web": "prettier --write \"**/*.{ts,html,scss,css,json,md}\" --ignore-path .prettierignore",
    "format:web:check": "prettier --check \"**/*.{ts,html,scss,css,json,md}\" --ignore-path .prettierignore",
    "format:dotnet": "dotnet format Charts.sln",
    "format:dotnet:check": "dotnet format Charts.sln --verify-no-changes",
    "format:staged": "prettier --write",
    "format:vscode": "prettier --write \".vscode/*.json\"",
    "dev": "npm run start --workspace=@stock-charts/client",
    "azure:start": "azurite --skipApiVersionCheck --location ./.azurite",
    "azure:functions": "cd server/Functions && func start",
    "azure:check": "func --version && azurite --version"
  },
  "devDependencies": {
    "azurite": "3.35.0",
    "markdownlint-cli": "0.45.0",
    "prettier": "3.6.2",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=22.15.0",
    "npm": ">=10.9.0"
  },
  "keywords": [
    "angular",
    "dotnet",
    "azure-functions",
    "stock-charts",
    "financial",
    "typescript",
    "chart.js"
  ]
}
