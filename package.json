{
  "name": "stock-charts",
  "description": "Full-stack financial charting application with Angular frontend and .NET backend",
  "author": "facioquo",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.27.0",
  "engines": {
    "node": ">=24.12.0",
    "pnpm": ">=10.27.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/facioquo/stock-charts.git"
  },
  "scripts": {
    "clean": "pnpm -r run clean",
    "prebuild": "pnpm run generate:backups",
    "build": "pnpm -r run build",
    "prebuild:prod": "pnpm run generate:backups",
    "build:prod": "pnpm -r run build.prod",
    "start": "pnpm --filter @stock-charts/client run start",
    "test": "pnpm -r run test",
    "test:watch": "pnpm -r run test:watch",
    "test:coverage": "pnpm -r run test:coverage",
    "pretest:dotnet": "dotnet tool restore",
    "test:dotnet": "dotnet test Charts.sln --collect:\"XPlat Code Coverage\" --results-directory ./server/coverage --logger trx && dotnet tool run reportgenerator -reports:server/coverage/**/coverage.cobertura.xml -targetdir:server/coverage -reporttypes:lcov",
    "test:all": "pnpm --filter @stock-charts/client run test:coverage && pnpm run test:dotnet",
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "generate:backup-indicators": "node scripts/generate-backup-indicators.js",
    "generate:backup-quotes": "node scripts/generate-backup-quotes.js",
    "generate:backups": "pnpm run generate:backup-indicators && pnpm run generate:backup-quotes",
    "bench:chart-config": "node scripts/bench-chart-config.js",
    "lint:md": "markdownlint-cli2",
    "lint:md:fix": "markdownlint-cli2 --fix",
    "format": "pnpm run format:web && pnpm run format:dotnet",
    "format:check": "pnpm run format:web:check && pnpm run format:dotnet:check",
    "format:web": "prettier --write \"**/*.{ts,html,scss,css,json,md}\" --ignore-path .prettierignore",
    "format:web:check": "prettier --check \"**/*.{ts,html,scss,css,json,md}\" --ignore-path .prettierignore",
    "format:dotnet": "dotnet format Charts.sln",
    "format:dotnet:check": "dotnet format Charts.sln --verify-no-changes",
    "format:staged": "prettier --write",
    "format:vscode": "prettier --write --no-ignore \".vscode/*.json\"",
    "dev": "pnpm --filter @stock-charts/client run start",
    "azure:start": "azurite --skipApiVersionCheck --location ./.azurite",
    "azure:functions": "cd server/Functions && func start",
    "azure:check": "func --version && azurite --version",
    "azure:clean": "rimraf ./.azurite"
  },
  "devDependencies": {
    "azurite": "3.35.0",
    "markdownlint-cli2": "0.20.0",
    "prettier": "3.7.4",
    "rimraf": "6.1.2",
    "typescript": "5.9.3"
  }
}
