{
  "name": "Stock Charts Dev Container",
  "image": "mcr.microsoft.com/dotnet/sdk:9.0",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/powershell:1": {},
    "ghcr.io/devcontainers/features/azure-cli:1": {},
    "ghcr.io/devcontainers/features/eslint:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-azurefunctions",
        "ms-dotnettools.csharp",
        "angular.ng-template"
      ]
    }
  },
  "settings": {
    "terminal.integrated.shell.linux": "/usr/bin/bash"
  },
  "postCreateCommand": "npm install -g @angular/cli",
  "remoteEnv": {
    "ALPACA_KEY": "${localEnv:ALPACA_KEY}",
    "ALPACA_SECRET": "${localEnv:ALPACA_SECRET}",
    "AzureWebJobsStorage": "${localEnv:AzureWebJobsStorage}"
  }
}
